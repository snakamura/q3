<header>
	<line class="mail">
		<static width="4em" style="bold" showAlways="true">To:</static>
		<edit>{@FormatAddress(To)}</edit>
	</line>
	<line class="mail" hideIfEmpty="cc">
		<static width="4em" style="bold" showAlways="true">Cc:</static>
		<edit name="cc">{@FormatAddress(Cc)}</edit>
	</line>
	<line class="news">
		<static width="4em" style="bold" showAlways="true">Newsgroups:</static>
		<edit>{Newsgroups}</edit>
	</line>
	<line class="news" hideIfEmpty="followup-to">
		<static width="4em" style="bold" showAlways="true">Followup-To:</static>
		<edit name="followup-to">{FollowUp-To}</edit>
	</line>
	<line>
		<static width="4em" style="bold" showAlways="true">From:</static>
		<edit>{@FormatAddress(From)}</edit>
		<static width="3em" style="bold" showAlways="true">Date:</static>
		<edit width="10em">{@FormatDate(@Date(Date), '%Y4/%M0/%D %h:%m:%s')}</edit>
	</line>
	<line>
		<static width="4em" style="bold" showAlways="true">Subject:</static>
		<edit>{@Subject()}</edit>
	</line>
	<line hideIfEmpty="attachment">
		<static width="4em" style="bold" showAlways="true">Attachment:</static>
		<attachment name="attachment"/>
	</line>
</header>
