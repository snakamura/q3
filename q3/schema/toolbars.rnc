datatypes xsd="http://www.w3.org/2001/XMLSchema-datatypes"

start = element toolbars {
	element toolbar {
		(
			element button {
				empty,
				attribute image {
					xsd:nonNegativeInteger
				},
				attribute text {
					xsd:string
				}?,
				attribute tooltip {
					xsd:string
				}?,
				(action | (action, dropdown) | dropdown)
			} |
			element separator {
				empty
			}
		)*,
		attribute name {
			xsd:string
		},
		attribute showText {
			xsd:boolean
		}?
	}*
}

action = attribute action {
	xsd:string
},
attribute param {
	xsd:string
}?

dropdown = attribute dropdown {
	xsd:string
}
